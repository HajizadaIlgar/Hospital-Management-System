@model DoctorVM
@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slider create</h6>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input class="form-control" asp-for="Surname">
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepaertmentId"></label>
                <input class="form-control" asp-for="DepaertmentId">
                <span class="text-danger" asp-validation-for="DepaertmentId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input class="form-control" asp-for="ImageUrl">
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
@model List<Doctor>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <style>
        #bttn {
            color: aliceblue;
            background-color: brown;
        }

            #bttn:hover {
                background-color: burlywood;
            }
    </style>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Experience</h6>
            <a class="btn btn-primary" asp-controller="Experience" asp-action="Create">Yarat</a>
            <a id="bttn" class="btn btn-group-sm" href="http://localhost:5276/">Bax</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>FullName</th>
                            <th style="text-align:center" colspan="4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><img src="~/doctors/@item.ImageUrl" width="70" /></td>
                                <td>@(item.Name+" "+@item.Surname)</td>
                                <td><a class="btn btn-success" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Dəyiş</a></td>
                                <td><a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
